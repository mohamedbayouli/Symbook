{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}
<h1>Détail du livre</h1>
<div class="row" >
<div class="col-3">
  <img src="{{ livre.image }}" class="card-img" alt="...">
</div>
  <div class="col">
    <h2>{{ livre.titre }} ({{ livre.prix}} DT)</h2>
    <h3>Editeur: {{ livre.editeur }}</h3>
    <h3>Date Edition: {{ livre.dateEdition|date('d/m/Y') }}</h3>
    <h4>ISBN: {{ livre.isbn }}</h4>
    <p>Quantité : {{ livre.qte }}</p>
    <p>{{ livre.resume }}</p>
    <a href="{{ path('cart_add',{id:livre.id}) }}" class="btn btn-primary">Ajouter au panier</a>
{% endblock %}
